{
	"name": "@michealpearce/utils",
	"version": "0.0.0",
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"dev": "nodemon",
		"build:clean": "echo 'removing dist..' && rm -rf dist",
		"build:compile": "echo 'compiling..' && tsc",
		"build": "run-s build:clean build:compile",
		"test": "echo 'running test...' && ts-node --esm --experimental-specifier-resolution=node test/index.ts"
	},
	"nodemonConfig": {
		"exec": "run-s build test",
		"ext": "ts",
		"watch": [
			"src",
			"test"
		]
	},
	"devDependencies": {
		"@types/node": "^18.13.0",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^4.9.3"
	}
}
