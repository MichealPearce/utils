{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,

		"declaration": true,
		"declarationDir": "dist",

		"baseUrl": ".",
		"paths": {
			"@michealpearce/utils": ["../src/index.ts"],
			"@michealpearce/utils/*": ["../src/*"]
		}
	},
	"include": ["./*", "../src/*"]
}
